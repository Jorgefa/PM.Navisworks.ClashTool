<Window
    x:Class="PM.Navisworks.ZoneTool.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:PM.Navisworks.ZoneTool.ViewModels"
    Title="Navisworks Zone Tool"
    Width="900"
    Height="720"
    d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    Icon="../Resources/PM.ico"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Command="{Binding TestButtonCommand}" Content="Play" />
            <Button Command="{Binding SelectElementsCommand}" Content="Select elements" />
            <Button Command="{Binding SelectZonesCommand}" Content="Select zones" />
            <Button Command="{Binding GetElementsCommand}" Content="Get elements" />
            <Button Command="{Binding GetZonesCommand}" Content="Get zones" />
        </StackPanel>
    </Grid>
</Window>
